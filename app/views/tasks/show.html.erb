<div class="container d-flex justify-content-center">
  <h1>My tasks</h1>
<ul style="list-style: none">
  <li><%= @task[:name] %></li>
  <li><%= @task[:title] %></li>
  <li><%= @task[:details] %></li>
   <% if @task[:completed] == true %>
    <i class="far fa-check-square">Good job! your task is completed</i>
    <% else %>
    <i class="far fa-square"> Your task is completed yet</i>
    <% end %>
  <li><%= link_to "Back to List", tasks_path %></li>
  <li><%= link_to "Edit task", task_edit_path(@task) %></li>

</ul>
</div>
